@model List<YorumModel>
@{
    ViewData["Title"] = "Yorumlar";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>


<div class="row mb-3">
    <div class="col">
          <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Yorum Icerik</th>
                    <th>Oyun Id</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (YorumModel user in Model)
                {
                    <tr>
                      
                        <td>@user.YorumIcerik</td>
                        <td>@user.OyunId</td>
                        <td class="text-end">     
                            <a asp-action="YorumSil" asp-route-id="@user.Id"
                           onclick="return confirm('Bu Yorumu Silmek İstiyor Musunuz? : @user.YorumIcerik ?')"
                           class="btn btn-danger btn-sm"><i class="fa fa-trash me-2"></i>Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>