@model List<OyunModel>
@{
    ViewData["Title"] = "Oyunlar";
}

<div class="row">
    <div class="col">
        <h1 class="display-4" key=33>@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Ekle" class="btn btn-primary btn-sm" key=44><i class="fa fa-plus me-2"></i>Yeni Oyun</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th key=45>OyunAd</th>
                    <th key=46>Icerik</th>
                    <th key=47>Kategori Id</th>
                
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (OyunModel user in Model)
                {
                    <tr>
                        <td>@user.OyunAd</td>
                        <td>@user.Icerik</td>
                        
                        <td>@user.KategoriId</td>
                   
                        <td class="text-end">
                            <a asp-action="Duzenle" asp-route-id="@user.Id" class="btn btn-info btn-sm text-white" key=42><i class="fa fa-edit me-2"></i>Düzenle</a>
                            <a asp-action="Sil" asp-route-id="@user.Id"
                           onclick="return confirm('Bu Oyunu Silmek İstiyor Musunuz? : @user.OyunAd ?')"
                           class="btn btn-danger btn-sm" key=43><i class="fa fa-trash me-2"></i>Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
