@using OyunSitesi.Models
@model YorumEkleModel

@{
    Kullanici kullanici = ViewBag.kullanici;
    Oyun oyun = ViewBag.oyun;
   
}


<div class="col-4 offset-4">
    <form  method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

        <div class="form-group mb-3">
            <label asp-for="KullaniciId" class="form-label">kullaniciId</label>
            <input asp-for="KullaniciId" class="form-control" />
            <span asp-validation-for="KullaniciId" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="OyunId" class="form-label">oyunId</label>
            <input asp-for="OyunId" class="form-control" />
            <span asp-validation-for="OyunId" class="text-danger small"></span>
        </div>




        <div class="form-group mb-3">
            <label asp-for="YorumIcerik" class="form-label">YorumIcerik</label>
            <input asp-for="YorumIcerik" class="form-control" />
            <span asp-validation-for="YorumIcerik" class="text-danger small"></span>
        </div>


        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Kaydet</button>
        </div>
    </form>
</div>