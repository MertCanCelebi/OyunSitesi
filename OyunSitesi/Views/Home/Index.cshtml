
@model List<OyunModel>
@{
    Kategori kategori1 = ViewBag.kategoriler;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OyunSitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OyunSitesi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">




    <link rel="stylesheet" href="~/blogtemplate/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/blogtemplate/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/blogtemplate/assets/css/owl.css">
</head>
<body>

      <section class="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-content">
                        <div class="row">
                            <div  class="col-lg-8">
                                <h3 style="color:#f00;" key=16>Oyun Magazininin Kalbi GameHell'e hoşgeldiniz</h3>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="main-banner header-text">
        <div class="container-fluid">
            <div class="owl-banner owl-carousel">
               @foreach (OyunModel kategori in Model)
               {
                                                
                                            
                    <div class="item">

                        <img src="~/blogtemplate/assets/images/@(kategori.Resim).jpg" width="370" height="450" alt="">
                        <div class="item-content">
                            <div class="main-content">
                                <div class="meta-category">
                                    <span>@kategori.KategoriId</span>
                                    
                                </div>
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@kategori.Id">
                                    <h4>@kategori.OyunAd</h4></a>
                                   
                                <ul class="post-info">                                    
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                
               }
            </div>
        </div>
    </div>



    <section class="blog-posts">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            @foreach (OyunModel kategori in Model)
                            {
                                <div class="col-lg-12">
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <img src="~/blogtemplate/assets/images/@(kategori.Resim).jpg" width="370" height="550" alt="">
                                        </div>
                                        <div class="down-content">
                                            <span>@kategori.KategoriId</span>
                                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@kategori.Id"><h4>@kategori.OyunAd</h4></a>
                                            <ul class="post-info">
                                               
                                               
                                            </ul>
                                            <p>@kategori.Icerik</p>
                                            
                                        </div>
                                    </div>
                                </div>
                          
                            }
                            
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="row">
                            
                           
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-item categories">
                                    <div class="sidebar-heading">
                                        <h2 key=17>En Çok Okunan 3 oyun</h2>
                                    </div>
                                            <li>                                                  
                                                 <td><a asp-controller="Home" asp-action="Detail" asp-route-id="14"><h4>Red Dead Redemption2</h4></a></td>
                                           </li>
                                <li>
                                    <td><a asp-controller="Home" asp-action="Detail" asp-route-id="12"><h4>GTA 5</h4></a></td>
                                </li>
                                <li>
                                    <td><a asp-controller="Home" asp-action="Detail" asp-route-id="19"><h4>Resident Evil 7</h4></a></td>
                                </li>
                            </div>
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <br />
       <br />
          <br />
    <br />
       <br />
    <br />
             <br />
    <!-- Bootstrap core JavaScript -->
    <script src="~/blogtemplate/vendor/jquery/jquery.min.js"></script>
    <script src="~/blogtemplate/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/blogtemplate/assets/js/custom.js"></script>
    <script src="~/blogtemplate/assets/js/owl.js"></script>
    <script src="~/blogtemplate/assets/js/slick.js"></script>
    <script src="~/blogtemplate/assets/js/isotope.js"></script>
    <script src="~/blogtemplate/assets/js/accordions.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>


    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!--script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></!--script-->
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

  
  
</body>



