<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OyunSitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OyunSitesi.styles.css" asp-append-version="true" />




    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/blogtemplate/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/blogtemplate/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/blogtemplate/assets/css/owl.css">
</head>
<body>

      <section class="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-content">
                        <div class="row">
                            <div class="col-lg-8">

                                <h4>
                                    Oyun Magazininin Kalbi GameHell'e hoşgeldiniz
                                </h4>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Content -->
    <!-- Banner Starts Here -->
    <div class="main-banner header-text">
        <div class="container-fluid">
            <div class="owl-banner owl-carousel">
               @foreach (OyunModel kategori in Model)
               {
                                                
                                            
                    <div class="item">

                        <img src="~/blogtemplate/assets/images/@(kategori.Resim).jpg" width="370" height="450" alt="">
                        <div class="item-content">
                            <div class="main-content">
                                <div class="meta-category">
                                    <span>@kategori.KategoriId</span>
                                    
                                </div>
                                <a asp-controller="Oyun" asp-action="Index" asp-route-id="@kategori.Id">
                                    <h4>@kategori.OyunAd</h4></a>
                                <ul class="post-info">                                    
                                    <li>@kategori.Yorum Comments</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                
               }
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->



    <section class="blog-posts">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            @foreach (OyunModel kategori in Model)
                            {
                                <div class="col-lg-12">
                                    <div class="blog-post">
                                        <div class="blog-thumb">
                                            <img src="~/blogtemplate/assets/images/@(kategori.Resim).jpg" width="370" height="550" alt="">
                                        </div>
                                        <div class="down-content">
                                            <span>@kategori.KategoriId</span>
                                            <a asp-controller="Oyun" asp-action="Index"><h4>@kategori.OyunAd</h4></a>
                                            <ul class="post-info">
                                               
                                                <li>@kategori.Yorum Comments</li>
                                            </ul>
                                            <p>@kategori.Icerik <a rel="nofollow" href="https://templatemo.com/contact" target="_parent">Contact TemplateMo</a> for more info. Thank you.</p>
                                            
                                        </div>
                                    </div>
                                </div>
                          
                            }
                            <div class="col-lg-12">
                                <div class="main-button">
                                    <a href="blog.html">View All Posts</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="sidebar-item search">
                                    <form id="search_form" name="gs" method="GET" action="#">
                                        <input type="text" name="q" class="searchText" placeholder="type to search..." autocomplete="on">
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-item recent-posts">
                                    <div class="sidebar-heading">
                                        <h2>Recent Posts</h2>
                                    </div>
